{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",

    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "allowUnreachableCode": false,

    "types": ["node"],

    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017"],

    "noEmit": true,
    "noEmitOnError": true,
    "strict": true,
    "allowJs": false
  },
  "include": [
    "src/a-best-practices.ts"
  ],
  "exclude": ["node_modules", "lib"]
}
